  <label for="layout-switch" class="relative inline-flex items-center cursor-pointer">
    <!-- hidden checkbox -->
    <input type="checkbox" id="layout-switch" class="sr-only peer">
    
    <!-- background track -->
    <div class="w-12 h-6 bg-gray-300 rounded-full shadow-inner transition-colors duration-300 ease-in-out peer-checked:bg-gray-800"></div>
    
    <!-- toggle knob -->
    <div class="absolute left-0.5 top-0.5 w-5 h-5 bg-white rounded-full shadow transform transition-transform duration-300 ease-in-out peer-checked:translate-x-6"></div>
  </label>
  <span class="ml-3 text-sm text-[var(--color-secondary)]">Dark Mode</span>
